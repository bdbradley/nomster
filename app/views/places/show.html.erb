<div class="booyah-box col-10 offset-1">
  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
  <br/><br/>
  <p><%= @place.description %></p>

<div class="booyah-box col-12">
  <h1>Add a photo</h1>
  <%= simple_form_for @photo do |f| %>
    <%= f.input :picture %>
    <%= f.submit "Submit a photo", class: 'btn btn-primary' %>  
  <% end %>
</div>

